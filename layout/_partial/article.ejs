<article
  id="<%= post.layout %>-<%= post._id %>"
  class="article article-type-<%= post.layout %>"
  itemscope
  itemprop="blogPost"
>
  <div class="article-inner">
    <% if ((post.link || post.title) && post.layout !== 'tweet'){ %>
    <header class="article-header">
      <%- partial('post/title', {class_name: 'article-title'}) %>
    </header>
    <% } %>

    <div
      class="article-more-info article-more-info-<%= post.layout %> hairline"
    >
      <%- partial('post/date', {class_name: 'article-date', date_format: null})
      %> <% if (post.categories && post.categories.length){ %>
      <div class="article-category">
        <%- list_categories(post.categories, { show_count: false, class:
        'article-category', style: 'none', separator: ',', depth: 1 }) %>
      </div>
      <% } %> <% if (post.tags && post.tags.length){ %>
      <div class="article-tag">
        <%- list_tags(post.tags, { show_count: false, class: 'article-tag',
        amount: 3 }) %>
      </div>
      <% } %>
    </div>

    <div class="article-entry post-inner-html hairline" itemprop="articleBody">
      <%- post.content %>
    </div>
  </div>

  <%- partial('post/nav') %>
</article>
